    %table.table#top_monthly_users
      %thead
        %tr
          %th{:scope => "col"} #
          %th{:scope => "col"} Full name
          %th{:scope => "col"} Points
      %tbody
        - @top_monthly_users.each_with_index do |top_record, index|
          %tr
            %th{:scope => "row"}= index + 1
            %td= top_record[:user].full_name
            %td= top_record[:points]
