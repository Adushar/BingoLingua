- unless @free_tests.empty?
  .container.test_menu
    = render :partial => 'menu_block', locals: { name: t('game.lets_play_packs'), tests: @free_tests }
    = paginate @free_tests, param_name: :free_tests

- unless @subscribe_tests.empty?
  .container.test_menu
    = render :partial => 'menu_block', locals: { name: t('game.premium_packs'), tests: @subscribe_tests }
    = paginate @subscribe_tests, param_name: :subscribe_tests
- else
  %h1.text-center.m-3 Oops. Nothing to see here yet
