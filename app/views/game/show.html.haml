//Css for sidebar
// Sidebar
:css
  body {
  padding-left: 100px;
  }
%ul.sidenav.d-md-flex.d-none.navbar-fixed-left
  %li.text-center
    %a{:href => "/"}
      = fa_icon "chevron-circle-left"
    %span#number_of_part 1
    %a{:href => "/"}
      = fa_icon "chevron-circle-right"
  %li.text-center.bottom
    %a{:href => "/"}
      = fa_icon "check-circle"
  %li.text-center
    %a{"data-toggle" => "modal", :href => ".level-of-difficulty-modal-sm"}
      = fa_icon "cog"
  / Button trigger modal

.container
  .row
    - @cards.limit(25).each do |card|
      .card_block.col-xl-2.col-lg-2.col-md-3.col-5.mx-auto
        %a{:oclick => ""}
          = fa_icon "star-o", class: "star"
        = image_tag card.picture, class: "card not_drag", "onclick" => "playSound(\"#{card.sound}\");"

