<div class="devise text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"} ) do |f| %>
    <div class="mb-4" width="72" height="72">
      <%= render :partial => 'layouts/svg_image' %>
    </div>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="form_fields">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "inputEmail", class: "form-control", placeholder: "Email address" %>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "off", id: "inputPassword", class: "form-control" %>
    </div>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    <%= render "devise/shared/links" %>
    <p class="mt-5 mb-3 text-muted">Â© 2017-2018</p>
  <% end %>
</div>
