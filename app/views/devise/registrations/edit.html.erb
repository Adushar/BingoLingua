<div class="devise container">
  <hr class="mb-4">
  <h4 class="mb-3">Edit my account</h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, required: "", class: "form-control" %>
        <div class="invalid-feedback">
          Valid first name is required.
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true, required: "", class: "form-control" %>
        <div class="invalid-feedback">
          Valid last name is required.
        </div>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "", class: "form-control" %>
      <div class="invalid-feedback">
        Please enter a valid email address.
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off", required: "", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "New confirmation" do %>
        New password <span class="text-muted">(leave blank if you don't want to change it)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <hr class="mb-4">

    <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block" %>

    <hr class="mb-4">
  <% end %>
  <h4 class="mb-3">Do you want to leave?</h4>
  <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg btn-block" %>
  <hr class="mb-4">
</div>
